<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ameko.Views.Layout.VideoView">
    <Grid ColumnDefinitions="*" RowDefinitions="10*,1*">
        <Panel Grid.Row="0" Grid.Column="0" Background="lightblue">
            <TextBlock>Video Preview</TextBlock>
        </Panel>
        <Panel Grid.Row="1" Grid.Column="0" Background="yellow">
            <TextBlock>Video Controls</TextBlock>
        </Panel>
    </Grid>
</UserControl>
